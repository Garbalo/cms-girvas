<li class="list__item item" data-template-name="{TEMPLATE_NAME}" data-template-category="{TEMPLATE_CATEGORY_NAME}" data-template-installed-status="{TEMPLATE_INSTALLED_STATUS}">
  <div class="item__icon-container"></div>
  <div class="item__body-container">
    <h2 class="item__title">
      <a href="{TEMPLATE_PAGE_URL}" class="item__title-link">{TEMPLATE_TITLE}</a>
    </h2>
    <div class="item__description">{TEMPLATE_DESCRIPTION}</div>
  </div>
  <div class="item__footer-container" role="item-footer-panel"></div>
</li>